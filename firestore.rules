rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Top-level rules
    match /{document=**} {
      allow read, write: if false; // Deny default access
    }

    // User-scoped rules
    match /users/{userId} {
      
      // Allow users to access their own user document (optional if you store user profiles)
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Allow access to subcollections (like 'palettes')
      match /palettes/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
